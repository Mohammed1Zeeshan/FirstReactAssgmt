        // no server method 
    const fs =require('fs/promises')
//load json files
    const db=JSON.parse(fs.readFileSync('db.json'));
// save data function
const saveData=(db,file)=>
{ 
  const finshed=(error)=>{
    if(error){console.error(error)
      return
       }
  }
const jsonData=JSON.stringify(db,null,2)
